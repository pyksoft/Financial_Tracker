<Window x:Class="Financial_Tracker.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard" Height="500" Width="800" BorderThickness="1">
    <Grid ShowGridLines="True" RenderTransformOrigin="0.322,0.521">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
     </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>

        <Border Background="#FFF3976C" Grid.Column="1" Grid.Row="0"></Border>
        <StackPanel HorizontalAlignment="Right" Height="50" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Width="549" >
            <TextBlock Width="100" HorizontalAlignment="Left" FontSize="20" Margin="10 10 0 0"> Goals:</TextBlock>
            <Button Width="20" Content="+" Margin="450,0,0,0" ></Button>
        </StackPanel>

        <Border Background="#FF35D862" Grid.Column="0" Grid.Row="0"></Border>
        <StackPanel HorizontalAlignment="Left"  Grid.Row="0" Grid.Column="0" VerticalAlignment="Top"  >
            <TextBlock FontSize="20" Margin="20 10 0 0"><Run Text="Money:"/></TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Column="0" Grid.Row="1">
                <ListBox x:Name="MoneyInfoList" ItemsSource="{Binding NotifyOnSourceUpdated=True}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

        <Border Background="LightGray" Grid.Column="0" Grid.Row="1"></Border >
        <StackPanel Grid.Column="0" Grid.Row="1">
            <TextBox x:Name="Salary" Width="100" Height="20" Margin="0,50,0,10">Salary</TextBox>
                <TextBox x:Name="Expenses" Width="100" Height="20" Margin="0,0,0,10">Expenses</TextBox>

        <Button x:Name="Save" Width="100" Content="Save" Click="Save_Click" Background="DarkSeaGreen"></Button>

        </StackPanel>
    </Grid>
</Window>
